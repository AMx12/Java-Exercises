
public class LoopSum {

	public static void main(String[] args) {
		LoopSum sum = new LoopSum();
		for (int loop = 0; loop < 10; loop++) {
			System.out.println(sum.addZero(3, 9, true));
		}
	}

	public int addZero(int a, int b, boolean cond) {
		int answer;
		if (cond | a == 0 | b == 0) {
			answer = a + b;
		} else {
			answer = a * b;
		}
		return answer;
	}

}