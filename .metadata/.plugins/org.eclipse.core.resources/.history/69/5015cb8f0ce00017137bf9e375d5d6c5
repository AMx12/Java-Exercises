
public class EvenSpace {

	public static void main(String[] args) {
		EvenSpace calculate = new EvenSpace();
		System.out.println(calculate.checkSpacing(12, 16, 20));
		System.out.println(calculate.checkSpacing(12, 20, 16));
		System.out.println(calculate.checkSpacing(16, 12, 20));
	}

	public boolean checkSpacing(int first, int second, int third) {
		boolean isSpacedEvenly = false;
		if (first - second == second - third) {
			isSpacedEvenly = true;
		}
		else if (second - first == third - second) {
			isSpacedEvenly = true;
		}
		
		return isSpacedEvenly;
	}

}
