
public class EvenSpace {

	public static void main(String[] args) {
		EvenSpace calculate = new EvenSpace();
		System.out.println(calculate.checkSpacing(1, 2, 3));
		System.out.println(calculate.checkSpacing(1, 3, 2));
		System.out.println(calculate.checkSpacing(2, 1, 3));
		System.out.println(calculate.checkSpacing(2, 3, 1));
		System.out.println(calculate.checkSpacing(3, 1, 2));
		System.out.println(calculate.checkSpacing(1, 2, 1));
	}

	public boolean checkSpacing(int first, int second, int third) {
		boolean isSpacedEvenly = false;
		if (first - second == second - third) {
			isSpacedEvenly = true;
		}

		return isSpacedEvenly;
	}

}
