
public class Fibonacci {

	public static void main(String[] args) {
		Fibonacci result = new Fibonacci();
		System.out.println(result.findFibonacci(1));
		System.out.println(result.findFibonacci(2));
		System.out.println(result.findFibonacci(3));
		System.out.println(result.findFibonacci(4));
		System.out.println(result.findFibonacci(5));
		System.out.println(result.findFibonacci(6));
		// 1 = 1
		// 2 = 1
		// 3 = 2
		// 4 = 3
		// 5 = 5
		// 6 = 8
	}

	public int findFibonacci(int numberInput) {
		int fibonacciNumber = 1;
		int fibonacciLast = 0;

		if (numberInput == 0) {
			fibonacciNumber = 0;
		} else {
			for (int i = 1; i < numberInput; i++) {
				fibonacciNumber = fibonacciNumber + fibonacciLast;
				fibonacciLast = i * fibonacciNumber;
			}
		}

		return fibonacciNumber;
	}
}
