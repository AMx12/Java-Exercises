
public class EvenSpace {

	public static void main(String[] args) {
		EvenSpace calculate = new EvenSpace();
		System.out.println(calculate.checkSpacing(18, 12, 6));
	}

	public boolean checkSpacing(int first, int second, int third) {
		boolean isSpacedEvenly = false;
		if (first - second == second - third) {
			isSpacedEvenly = true;
		}
		return isSpacedEvenly;
	}

}
