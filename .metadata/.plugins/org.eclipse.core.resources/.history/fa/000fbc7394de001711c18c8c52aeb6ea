
public class Blackjack {

	public static void main(String[] args) {
		Blackjack closest = new Blackjack();
		System.out.println(closest.cardSum(22, 22));
	}

	public int cardSum(int player, int dealer) {
		int winner = 0;
		if (player > dealer & player < 22 | dealer > 21) {
			winner = player;
		} else if (dealer > player & dealer < 22 | player > 21) {
			winner = dealer;
		} else {
			winner = 0;
		}
		return winner;
	}
}
