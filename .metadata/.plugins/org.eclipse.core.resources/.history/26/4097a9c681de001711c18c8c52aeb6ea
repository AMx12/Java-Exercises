
public class ZeroSum {

	public static void main(String[] args) {
		ZeroSum sum = new ZeroSum();
		System.out.println(sum.addZero());
	}
	
	public int addZero()	{
		int one = 3;
		int two = 0;
		int answer;
		boolean cond = false;
			if (cond|one==0|two==0)	{
				answer = one + two;
			}
			else	{
				answer = one * two;
			}
		return answer;
	}

}