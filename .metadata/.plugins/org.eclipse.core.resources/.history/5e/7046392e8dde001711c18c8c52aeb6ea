
public class ArraySum {

	public static void main(String[] args) {
		ArraySum sum = new ArraySum();

		System.out.println(sum.addZero(0, 88, true));
	}

	public int addZero(int a, int b, boolean cond) {
		int firstArray[] = { 1, 2, 3, 4, 5, 6, 7, 8, 9 };

		int answer;
		if (cond | a == 0 | b == 0) {
			answer = a + b;
		} else {
			answer = a * b;
		}
		return answer;
	}

}