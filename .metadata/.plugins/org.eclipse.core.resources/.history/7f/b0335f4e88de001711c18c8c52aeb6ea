
public class LoopSum {

	public static void main(String[] args) {
		LoopSum sum = new LoopSum();
		System.out.println(sum.addZero());
	}

	public int addZero(int a, int b, boolean cond) {
		int answer;
		if (cond | a == 0 | b == 0) {
			answer = a + b;
		} else {
			answer = a * b;
		}
		return answer;
	}

}